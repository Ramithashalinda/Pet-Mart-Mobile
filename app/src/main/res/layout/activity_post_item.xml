<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="15dp"
    android:elevation="5dp"
    android:layout_marginTop="30dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="138dp">


        <ImageView
            android:id="@+id/image_view_post_petImageItem"
            android:layout_width="115dp"
            android:layout_height="142dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo3" />


        <ImageView
            android:id="@+id/image_view_post_user_profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/image_view_post_petImageItem"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_post_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/semibold"
            android:text="User Name"
            android:textColor="#091020"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_post_user_profile_image"
            app:layout_constraintStart_toEndOf="@+id/image_view_post_user_profile_image"
            app:layout_constraintTop_toTopOf="@+id/image_view_post_user_profile_image" />

        <TextView
            android:id="@+id/text_view_post_pet_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Pet Name"
            android:textColor="#808080"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/image_view_post_user_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/image_view_post_user_profile_image" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/locationicon"
            app:layout_constraintStart_toStartOf="@+id/text_view_post_pet_name"
            app:layout_constraintTop_toBottomOf="@+id/text_view_post_pet_name" />

        <TextView
            android:id="@+id/text_view_post_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:layout_marginStart="8dp"
            android:text="Location"
            android:textColor="#808080"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView10"
            app:srcCompat="@drawable/callicon" />
        <TextView
            android:id="@+id/text_view_post_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="price"
            android:textColor="#091020"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView10"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            app:srcCompat="@drawable/rsicon" />

        <TextView
            android:id="@+id/text_view_post_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="Phone Number"
            android:textColor="#808080"
            android:textSize="12sp"
            android:layout_marginLeft="75dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_post_price"
            app:layout_constraintStart_toEndOf="@+id/text_view_post_price"
            app:layout_constraintTop_toTopOf="@+id/text_view_post_price"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="107dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="45dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_post_price"
            app:layout_constraintStart_toEndOf="@+id/text_view_post_price"
            app:layout_constraintTop_toTopOf="@+id/text_view_post_price"
            app:srcCompat="@drawable/callicon" />

        <TextView
            android:id="@+id/text_view_post_date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:layout_marginLeft="88dp"
            android:text="Date"
            android:textColor="#808080"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_post_pet_name"
            app:layout_constraintStart_toEndOf="@+id/text_view_post_pet_name"
            app:layout_constraintTop_toTopOf="@+id/text_view_post_pet_name"

            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="53dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
