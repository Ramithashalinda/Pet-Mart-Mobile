<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTop2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile2"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_margin="10dp"
            android:layout_marginTop="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/title2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/ivProfile2"
            android:layout_margin="10dp"
            android:text="Rahal Bandara"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/message2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            app:layout_constraintStart_toEndOf="@+id/ivProfile2"
            android:text="Gampaha"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title2"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/more"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="0dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/postImaget2"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/post2"
        app:layout_constraintTop_toTopOf="@+id/clTop2"
        android:layout_marginTop="0dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 Likes"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/postImaget2"
        app:layout_constraintStart_toStartOf="@+id/like2"
        android:layout_marginBottom="50dp"/>
    <ImageView
        android:id="@+id/like2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="@id/postImaget2"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/comment2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/comment"
        android:layout_marginTop="5dp"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="@id/postImaget2"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/share2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share"
        android:layout_marginTop="5dp"
        android:layout_marginStart="120dp"
        app:layout_constraintBottom_toBottomOf="@id/postImaget2"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>